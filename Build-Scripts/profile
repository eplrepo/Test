export PATH=/bin:/sbin:/usr/bin:/usr/sbin

if [ "$PS1" ]; then
	if [ "`id -u`" -eq 0 ]; then
		export PS1='# '
	else
		export PS1='$ '
	fi
fi

export PAGER='/bin/more '
export EDITOR='/bin/vi'

# Source configuration files from /etc/profile.d
for i in /etc/profile.d/*.sh ; do
	if [ -r "$i" ]; then
		. $i
	fi
	unset i
done

cat /usr/version/release.txt

sleep 3

#On Every Power ON , check for Software Update
cd /root/swupg-scripts
./ChkForSwUpg.sh

sleep 3


#Run LTP Test Suite
cd /usr/lib/ltp-testsuite/
./runltp -q -p -l ltptest.log -f Test_Case_Set_1
sshpass -p "epl@123" scp /usr/lib/ltp-testsuite/results/ltptest.log epl@10.144.172.149:/home/epl/LTIB/LTP_Source/home/epl/LTPbuildroot/pi2/testlog/

sleep 3

#Run Application
cd /root/AppBin/
./App &

top -n 3 > cpuusage.log
sshpass -p "epl@123" scp cpuusage.log epl@10.144.172.149:/home/epl/LTIB/LTP_Source/home/epl/LTPbuildroot/pi2/testlog/

#Run IOZONE Test
iozone -i o > iozone.log

#Run IPCS Test
ipcs > ipcs.log

#Run Hackbench test
hackbench > hackbench.log

sshpass -p "epl@123" scp  iozone.log ipcs.log hackbench.log epl@10.144.172.149:/home/epl/LTIB/LTP_Source/home/epl/LTPbuildroot/pi2/testlog/
#sshpass -p "epl@123" scp  iozone.log hackbench.log epl@10.144.172.149:/home/epl/LTIB/LTP_Source/home/epl/LTPbuildroot/pi2/testlog/

sleep 3

cat /usr/version/release.txt

ps
